{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json# ",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "artifactsBaseUrl": {
      "type": "string",
      "defaultValue": "https://rgcb.blob.core.windows.net/deployrg",
      "metadata": {
        "artifactsBaseUrl": "Base URL of template gallery package"
      }
    },
    "clusterName": {
      "type": "string"
    },
    "mds": {
      "type": "int",
      "defaultValue": 0
    },
    "dataNodeCount": {
      "type": "int"
    },
    "queryNodeCount": {
      "type": "int",
      "defaultValue": 0
    },
    "indexNodeCount": {
      "type": "int",
      "defaultValue": 0
    },
    "dataVmSize": {
      "type": "string"
    },
    "queryVmSize": {
      "type": "string",
      "defaultValue": ""
    },
    "indexVmSize": {
      "type": "string",
      "defaultValue": ""
    },
    "cbUsername": {
      "type": "securestring"
    },
    "cbPassword": {
      "type": "securestring",
      "defaultValue": ""
    },
    "adminUsername": {
      "type": "securestring"
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": ""
    },
    "sshKey": {
      "type": "securestring",
      "defaultValue": ""
    },
    "authenticationType": {
      "type": "string",
      "defaultValue": "password",
      "allowedValues": [
        "password",
        "sshPublicKey"
      ]
    },
    "vnetNewOrExisting": {
      "type": "string",
      "allowedValues": [
        "new",
        "existing"
      ]
    },
    "vnetName": {
      "type": "string"
    },
    "vnetSubnetName": {
      "type": "string"
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": ""
    },
    "vnetSubnetAddressPrefix": {
      "type": "string"
    },
    "vnetStartAddress": {
      "type": "string"
    },
    "vnetRGName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    }
  },
  "variables": {
    "scriptUri": "[parameters('artifactsBaseUrl')]",
    "storageAccountBasename": "[uniquestring(resourceGroup().id, deployment().name)]"
  },
  "resources": [
    {
      "name": "[concat(parameters('clusterName'), '-vnet')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-02-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('scriptUri'), '/vnet_', parameters('vnetNewOrExisting'), '.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vnetName": {
            "value": "[parameters('vnetName')]"
          },
          "vnetAddressPrefix": {
            "value": "[parameters('vnetAddressPrefix')]"
          },
          "vnetSubnetName": {
            "value": "[parameters('vnetSubnetName')]"
          },
          "vnetSubnetAddressPrefix": {
            "value": "[parameters('vnetSubnetAddressPrefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          }
        }
      }
    },
    {
      "name": "[concat(parameters('clusterName'), 'i')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-02-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', parameters('clusterName'), '-vnet')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('scriptUri'), '/role_', parameters('mds'), '.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "nodeCount": {
            "value": "[parameters('indexNodeCount')]"
          },
          "vmSize": {
            "value": "[parameters('indexVmSize')]"
          },
          "clusterName": {
            "value": "[parameters('clusterName')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "sshKey": {
            "value": "[parameters('sshKey')]"
          },
          "authenticationType": {
            "value": "[parameters('authenticationType')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "scriptUri": {
            "value": "[variables('scriptUri')]"
          },
          "storageAccountBasename": {
            "value": "[variables('storageAccountBasename')]"
          },
          "roleType": {
            "value": "i"
          },
          "vmBasename": {
            "value": "index"
          },
          "ipOffset": {
            "value": "[add(parameters('dataNodeCount'), parameters('queryNodeCount'))]"
          },
          "vnetName": {
            "value": "[parameters('vnetName')]"
          },
          "vnetSubnetName": {
            "value": "[parameters('vnetSubnetName')]"
          },
          "vnetStartAddress": {
            "value": "[parameters('vnetStartAddress')]"
          },
          "vnetRGName": {
            "value": "[parameters('vnetRGName')]"
          }
        }
      }
    },
    {
      "name": "[concat(parameters('clusterName'), 'q')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-02-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', parameters('clusterName'), '-vnet')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('scriptUri'), '/role_', parameters('mds'), '.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "nodeCount": {
            "value": "[parameters('queryNodeCount')]"
          },
          "vmSize": {
            "value": "[parameters('queryVmSize')]"
          },
          "clusterName": {
            "value": "[parameters('clusterName')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "sshKey": {
            "value": "[parameters('sshKey')]"
          },
          "authenticationType": {
            "value": "[parameters('authenticationType')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "scriptUri": {
            "value": "[variables('scriptUri')]"
          },
          "storageAccountBasename": {
            "value": "[variables('storageAccountBasename')]"
          },
          "roleType": {
            "value": "q"
          },
          "vmBasename": {
            "value": "query"
          },
          "ipOffset": {
            "value": "[parameters('dataNodeCount')]"
          },
          "vnetName": {
            "value": "[parameters('vnetName')]"
          },
          "vnetSubnetName": {
            "value": "[parameters('vnetSubnetName')]"
          },
          "vnetStartAddress": {
            "value": "[parameters('vnetStartAddress')]"
          },
          "vnetRGName": {
            "value": "[parameters('vnetRGName')]"
          }
        }
      }
    },
    {
      "name": "[concat(parameters('clusterName'), 'd')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-02-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', parameters('clusterName'), '-vnet')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('scriptUri'), '/role_1.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "nodeCount": {
            "value": "[parameters('dataNodeCount')]"
          },
          "vmSize": {
            "value": "[parameters('dataVmSize')]"
          },
          "clusterName": {
            "value": "[parameters('clusterName')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "sshKey": {
            "value": "[parameters('sshKey')]"
          },
          "authenticationType": {
            "value": "[parameters('authenticationType')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "scriptUri": {
            "value": "[variables('scriptUri')]"
          },
          "storageAccountBasename": {
            "value": "[variables('storageAccountBasename')]"
          },
          "roleType": {
            "value": "d"
          },
          "vmBasename": {
            "value": "data"
          },
          "ipOffset": {
            "value": 0
          },
          "vnetName": {
            "value": "[parameters('vnetName')]"
          },
          "vnetSubnetName": {
            "value": "[parameters('vnetSubnetName')]"
          },
          "vnetStartAddress": {
            "value": "[parameters('vnetStartAddress')]"
          },
          "vnetRGName": {
            "value": "[parameters('vnetRGName')]"
          }
        }
      }
    },
    {
      "name": "[concat(parameters('clusterName'), '-scripts')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-02-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('scriptUri'), '/scripts.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "dataNodeCount": {
            "value": "[parameters('dataNodeCount')]"
          },
          "clusterName": {
            "value": "[parameters('clusterName')]"
          },
          "cbPassword": {
            "value": "[parameters('cbPassword')]"
          },
          "cbUsername": {
            "value": "[parameters('cbUsername')]"
          },
          "vmBasename": {
            "value": "data"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "scriptUri": {
            "value": "[variables('scriptUri')]"
          }
        }
      }
    }
  ]
}